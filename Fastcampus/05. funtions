   "source": [
    "def url_filler(host, port, **kwargs):\n",
    "    base = 'https://www.' + host + '.com:' + port + '/?'\n",
    "    for k, v in kwargs.items():\n",
    "        base += k + '=' + v + '&'\n",
    "    return base"
   ]
  },
  {
