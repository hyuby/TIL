    "### Monty Hall Problem"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 16,
   "metadata": {},
   "outputs": [],
   "source": [
    "import random"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 36,
   "metadata": {
    "scrolled": true
   },
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "stay : 297 0.297, switch : 703 0.703\n"
     ]
    }
   ],
   "source": [
    "stay = 0\n",
    "switch = 0\n",
    "trial = 1000\n",
    "\n",
    "for _ in range(trial):\n",
    "    doors = [1,0,0]\n",
    "    random.shuffle(doors)\n",
    "    \n",
    "    #사용자가 선택한 문의 번호\n",
    "    choice = random.randrange(3)\n",
    "    user = doors.pop(choice)\n",
    "    # print(user)\n",
    "    doors.pop(doors.index(0))\n",
    "    \n",
    "    if user == 1 :\n",
    "        stay +=1\n",
    "#     elif doors[0] == 'car':\n",
    "#         switch +=1\n",
    "    else :\n",
    "        switch +=1\n",
    "print(\"stay : {} {}, switch : {} {}\".format(stay, stay/trial, switch, switch/trial))"
   ]
  },
