    "def awe_sum(num1, num2):\n",
    "    if type(num1) != int:\n",
    "        return \"TypeError : You must give type int\"\n",
    "    elif num1 < 1 :\n",
    "        return 'AnotherCustomError : num1 cannot be less than one'\n",
    "    elif num1 % 3==0:\n",
    "        return 'CustomError: num1 can not be times of 3.'\n",
    "\n",
    "    else :\n",
    "        return num1 + num2"
   ]
