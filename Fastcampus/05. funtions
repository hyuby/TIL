   "source": [
    "def calculator(oper, *args):\n",
    "    result = 0\n",
    "    if oper == 'plus':\n",
    "        for item in args:\n",
    "            result += item\n",
    "    elif oper == 'minus':\n",
    "        result = args[0]\n",
    "        for item in args[1:]:\n",
    "            result -= item\n",
    "    return result"
   ]
  },
